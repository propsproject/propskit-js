{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,    
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
    "./lib/**/*.ts"    
  ],
  "exclude": [
    "node_modules",    
    "lib/**/*.test.ts"
  ]
}